<h1>Profile Page for <%= @user.name %></h1>
<h2>Your favourite Genres</h2>
<div class="genre_list">
  <ul class="genre_index_ul">
    <% @user.genres.each do |g| %>
      <li class="genre_index_li">
        <%= link_to g.name, genre_path(g.id) %>
      </li>
    <% end %>
      <li class="genre_index_li">
        <%= link_to "Add", new_genre_path %>
      </li>
  </ul>
</div>
