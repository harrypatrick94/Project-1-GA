<div class="genre-form-container">
  <%= form_for @genre do |f| %>
  <ul class="genre-form">
    <li>
      <%= f.label :name %>
    </li>
    <li>
      <%= f.text_field :name %>
    </li>
    <li>
      <%= f.label :description %>
    </li>
    <li>
      <%= f.text_area :description %>
    </li>
    <li>
      <%= f.label :image %>
    </li>
    <li>
      <%= f.text_field :image %>
    </li>
    <li>
      <%= f.submit %>
    </li>

  <% end %>
  </ul>
</div>
