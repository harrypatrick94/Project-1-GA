<h2>login</h2>
<%# if previous login not successful show error %>
<% if flash[:error] %>
  <strong><%= flash[:error] %></strong>
<% end %> <%# end if flash %>

<%= form_tag login_path do %>

  <%= label_tag :email %>
  <%= email_field_tag :email %>
  <br>
  <%=  label_tag :password %>
  <%= password_field_tag :password %>
  <br>
  <%= submit_tag  "Login" %>

<% end %>
